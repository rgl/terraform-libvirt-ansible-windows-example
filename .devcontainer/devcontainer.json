{
  "name": "Ansible",
  "dockerFile": "../Dockerfile",
  "context": "..",
  "runArgs": [
    "--group-add=120", // 120 is the id of the libvirt group.
    "-v=${localEnv:HOME}/.ssh/id_rsa:/home/vscode/.ssh/id_rsa:ro",
    "-v=${localEnv:HOME}/.ssh/id_rsa.pub:/home/vscode/.ssh/id_rsa.pub:ro",
    "-v=/var/run/libvirt/libvirt-sock:/var/run/libvirt/libvirt-sock",
    "-e=TF_VAR_workspace_path=${localWorkspaceFolder}"
  ],
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "features": {
    "ghcr.io/devcontainers/features/powershell": {
      // renovate: datasource=github-releases depName=PowerShell/PowerShell extractVersion=^v(?<version>7\.4\..+)
      "version": "7.4.13"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "github.vscode-github-actions",
        "hashicorp.terraform",
        "ms-python.black-formatter",
        "ms-python.python",
        "redhat.ansible",
        "samuelcolvin.jinjahtml",
        "streetsidesoftware.code-spell-checker"
      ]
    }
  }
}